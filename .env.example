# ReconVault Environment Configuration

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
# Secret key for JWT token generation and other security features
SECRET_KEY=your-secret-key-change-in-production

# Frontend Configuration
FRONTEND_PORT=5173
FRONTEND_HOST=0.0.0.0
# API URL for frontend to communicate with backend
VITE_API_BASE_URL=http://localhost:8000/api/v1
# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8000/ws

# Database Configuration (PostgreSQL)
# Database name
POSTGRES_DB=reconvault
# Database user
POSTGRES_USER=reconvault_user
# Database password
POSTGRES_PASSWORD=changeme
# Database port
POSTGRES_PORT=5432
# Database host (use 'postgres' when running in Docker)
POSTGRES_HOST=postgres

# Graph Database Configuration (Neo4j)
# Neo4j user
NEO4J_USER=neo4j
# Neo4j password
NEO4J_PASSWORD=reconvault
# Neo4j authentication (user/password)
NEO4J_AUTH=neo4j/reconvault
# Neo4j Bolt port for binary communication
NEO4J_BOLT_PORT=7687
# Neo4j HTTP port for REST API and Browser
NEO4J_HTTP_PORT=7474
# Neo4j host (use 'neo4j' when running in Docker)
NEO4J_HOST=neo4j

# Redis Configuration
# Redis port
REDIS_PORT=6379
# Redis host (use 'redis' when running in Docker)
REDIS_HOST=redis
# Redis password (optional)
REDIS_PASSWORD=

# Nginx Configuration
# HTTP port for Nginx
NGINX_PORT=80
# HTTPS port for Nginx
NGINX_SSL_PORT=443

# External APIs (Placeholders)
HIBP_API_KEY=your_hibp_key_here
GITHUB_TOKEN=your_github_token_here
SHODAN_API_KEY=your_shodan_key_here
TWITTER_API_KEY=your_twitter_key_here
OPENAI_API_KEY=your_openai_key_here
VIRUSTOTAL_API_KEY=your_virustotal_key_here
ABUSEIPDB_API_KEY=your_abuseipdb_key_here

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Development Configuration
DEBUG=true
RELOAD=true
LOG_LEVEL=INFO
